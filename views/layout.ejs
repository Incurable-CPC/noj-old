<!DOCTYPE html>
<html>
	<head>
		<title><%= title %> - NOJ</title>
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/css/bootstrap-theme.min.css" />
		<link rel="stylesheet" href="/css/common.css" />
		<% for (var i = 0; i < css.length; i++) { %>
		<link rel='stylesheet' href="<%=css[i] %>" />
		<% } %>
	</head>
	<body role="document">

		<nav class="navbar navbar-default navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a class="navbar-brand" href="/">NJU OnlineJudge</a>
				</div>
				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav">
						<li id="index"><a href="/">index</a></li>
						<li id="problems"><a href="/problems">Problems</a></li>
						<li id="status"><a href="/status">Status</a></li>
						<li id="contests"><a href="#">Contests</a></li>

					</ul>
					<ul class="nav navbar-nav navbar-right">
						<% if (!user) { %>
						<li><a href="/login">login</a></li>
						<li><a href="/reg">register</a></li>
						<% } else { %>
							<li><a href="#"><%=user.name %></a></li>
						<li><a href="/logout">logout</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</nav>

		<div class="container theme-showcase" role="main">
			<% if (success.length > 0) { %>
				<div class="alert alert-success">
				<%= success %>
				</div>
			<% } %>
			<% if (error.length > 0) { %>
				<div class="alert alert-danger">
				<%= error %>
				</div>
			<% } %>
			<%- body %>
			<hr />
			<footer>
			</footer>
		</div>
	</body>
	<script src="/js/jquery-1.11.3.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<% for (var i = 0; i < js.length; i++) { %>
	<script src="<%=js[i] %>"></script>
	<% } %>
</html>
