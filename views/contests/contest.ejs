<% layout(layoutView) %>
<div class="contain">
	<div class="col-sm-1"></div>
	<div class="col-sm-10">
		<div class="text-center">
			<h2><%=cont.title %></h2>
			<div>
				Start Time: <%=cont.start.format('yyyy-MM-dd hh:mm:ss') %>&nbsp;&nbsp;
				End Time: <%=cont.end.format('yyyy-MM-dd hh:mm:ss') %>
			</div>
			<div>
				Type: <span class="contest-type-<%=cont.type %>"><%=contestType[cont.type] %></span>&nbsp;&nbsp;
				Status: <span class="contest-status-<%=cont.status %>"><%=contestStatus[cont.status] %></span>
			</div>
			<div style="color:orange">
				Current Time: <%= new Date().format('yyyy-MM-dd hh:mm:ss') %>&nbsp;&nbsp;
			</div>
		</div>
		<br />
		<% if (cont.isManager||(cont.status != 0)) { %>
			<table class="table table-striped table-hover">
				<tr>
					<th width="15%">AC/Submit</th>
					<th width="20%">ID</th>
					<th width="65%">Title</th>
				</tr>
				<% for (var id in proList) {
					pro = proList[id]; %>
				<tr>
					<td>
						<% if (pro.submit > 0) { %>
							<%=pro.accepted %> / <%=pro.submit %>
						<% } %>
					</td>
					<td><a href="/contests/<%=cont.cid%>/problem/<%=pro.subId%>">Problem <%=pro.subId%></a></td>
					<td><%=pro.title%></td>
				</tr>
			<% } %>
		<% } %>
		</table>
		<% if (cont.isManager) { %>
			<a class="btn btn-sm btn-success" href="/contests/<%=cont.cid%>/add/problem">Add Problem</a>
		<% } %>
	</div>
</div>
