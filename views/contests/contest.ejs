<% layout(layoutView) %>
<% include ../partial/cont-info.ejs%>
<div class="contain">
	<div class="col-sm-1"></div>
	<div class="col-sm-10">
		<% if (cont.isManager||(cont.status != 0)) { %>
			<table class="table table-striped table-hover">
				<tr>
					<th width="15%">AC/Submit</th>
					<th width="20%">ID</th>
					<th width="65%">Title</th>
				</tr>
				<% for (var id = 0; id < proList.length; id++) {
					pro = proList[id];
				%>
				<tr>
					<td>
						<% if (pro.tried > 0) { %>
							<%=pro.solved%> / <%=pro.tried%>
						<% } %>
					</td>
					<td><a href="/contests/<%=cont.cid%>/problem/<%=pro.subId%>">Problem <%=pro.subId%></a></td>
					<td><%=pro.title%></td>
				</tr>
			<% } %>
		<% } %>
		</table>
		<% if (cont.isManager) { %>
			<a class="btn btn-sm btn-success" href="/contests/<%=cont.cid%>/add/problem">Add Problem</a>
		<% } %>
	</div>
	<div class="col-sm-1"></div>
</div>
