<% layout(layoutView) %>
<div class="contain">
	<div class="col-sm-1"></div>
	<div class="col-sm-10">
		<div class="text-center">
			<h2><%=con.title %></h2>
			<div>
				Start Time: <%=con.start.format('yyyy-MM-dd hh:mm:ss') %>&nbsp;&nbsp;
				End Time: <%=con.end.format('yyyy-MM-dd hh:mm:ss') %>
			</div>
			<div>
				Type: <span class="contest-type-<%=con.type %>"><%=contestType[con.type] %></span>&nbsp;&nbsp;
				Status: <span class="contest-status-<%=con.status %>"><%=contestStatus[con.status] %></span>
			</div>
			<div style="color:orange">
				Current Time: <%= new Date().format('yyyy-MM-dd hh:mm:ss') %>&nbsp;&nbsp;
			</div>
		</div>
		<br />
		<% if (con.isManager||(con.status != 0)) { %> 
			<table class="table table-striped table-hover">
				<tr>
					<th width="15%">AC/Submit</th>
					<th width="20%">ID</th>
					<th width="65%">Title</th>
				</tr>
				<% for (var id in proList) {
					pro = proList[id]; %>
				<tr>
					<td>
						<% if (pro.submit > 0) { %>
							<%=pro.accepted %> / <%=pro.submit %>
						<% } %>
					</td>
					<td><a href="/contests/<%=con.cid%>/problem/<%=id%>">Problem <%=id%></a></td>
					<td><%=pro.title%></td>
				</tr>
			<% } %>
		<% } %>
		</table>
		<% if (con.isManager) { %>
			<a class="btn btn-sm btn-success" href="/contests/<%=con.cid%>/add/problem">Add Problem</a>
		<% } %>
	</div>
</div>
