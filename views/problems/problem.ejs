<% layout(layoutView) %>
<script type="text/x-mathjax-config">
MathJax.Hub.Config({
  tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}
});
</script>
<script type="text/javascript" src="/js/lib/MathJax/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
<div class="contain">
	<div class="row">
		<div class="col-sm-1"></div>
		<div class="col-sm-10">
			<div class="text-center">
				<div><h1><%=pro.title %></h1></div>
				<div>
					Time Limit: <span class="label label-warning"><%=pro.timeLimit %>ms</span>&nbsp;&nbsp;
					Memory Limit: <span class="label label-warning"><%=pro.memoryLimit %>MB</span>
				</div>
				<div>
					Submit: <span class="label label-info"><%=pro.submit %></span>&nbsp;&nbsp;
					Accepted: <span class="label label-success"><%=pro.accepted %></span>
				</div>
			</div>
			<div class="text-left">
				<div>
					<div class="info">Description</div>
					<div class="detail"><%-pro.description %></div>
				</div>
				<div>
					<div class="info">Input</div>
					<div class="detail"><%-pro.input %></div>
				</div>
				<div>
					<div class="info">Output</div>
					<div class="detail"><%-pro.output %></div>
				</div>
				<div>
					<div class="info">Sampe Input</div>
					<div class="detail"><pre><%=pro.sampleInput %></pre></div>
				</div>
				<div>
					<div class="info">Sample Output</div>
					<div class="detail"><pre><%=pro.sampleOutput %></pre></div>
				</div>
				<div>
					<div class="info">Hint</div>
					<div class="detail"><%=pro.hint %></div>
				</div>
				<div>
					<div class="info">Source</div>
					<div class="detail"><%=pro.source %></div>
				</div>
			</div>
			<div class="text-center">
				<div class="btn-group">
					<a id="submit" class="btn btn-success" href="/problems/<%=pro.pid %>/submit">Submit</a>
					<a id="status" class="btn btn-default" href="/status">Status</a>
					<a id="statistics" class="btn btn-default" href="/problems/<%=pro.pid %>/statistics">Statistics</a>
					<a id="discuss" class="btn btn-default" href="/problems/discuss/<%=pro.pid %>">Discuss</a>
				</div>
			</div>
		</div>
		<div class="col-sm-1"></div>
	</div>
</div>
