<% layout('layout') %>
<form class="form-horizontal" method="post">
	<fieldset>
		<legend>Submit</legend>
		<div class="form-group">
			<label for="pid" class="col-sm-2 control-label">ID</label>
			<div class="col-sm-2">
				<input type="text" name="pid" id="pid" class="form-control" value="<%=pid %>" readonly>
			</div>
		</div>
		<div class="form-group">
			<label for="lang" class="col-sm-2 control-label">Lang</label>
			<div class="col-sm-2">
				<select  name="lang" id="lang" class="form-control">
					<option>C</option>
					<option>C++</option>
					<option>Java</option>
				</select>
			</div>
		</div>
		<%-partial('../partial/textarea', { name: 'code', label: 'Code', width: 7, height: 20 }) %>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-2">
				<button id="submit" class="btn btn-success">Submit</button>
			</div>
		</div>
	</fieldset>
</form>
